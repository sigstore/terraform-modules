{
  "displayName": "Rekor",
  "gridLayout": {
    "columns": "2",
    "widgets": [
      {
        "title": "Mean of Rekor API Latency over 1 minute",
        "xyChart": {
          "chartOptions": {
            "mode": "COLOR"
          },
          "dataSets": [
            {
              "plotType": "LINE",
              "targetAxis": "Y1",
              "timeSeriesQuery": {
                "timeSeriesQueryLanguage": "fetch prometheus_target\n| metric 'prometheus.googleapis.com/rekor_api_latency/histogram'\n| align delta(1m)\n| every 1m\n| group_by [metric.path], [mean_latency_ns: mean(value.rekor_api_latency)]\n| value [mean_latency_ms: mean_latency_ns / 1000000]"
              }
            }
          ],
          "timeshiftDuration": "0s",
          "yAxis": {
            "label": "latency (ms)",
            "scale": "LINEAR"
          }
        }
      },
      {
        "title": "Max of Rekor API Latency Summary ",
        "xyChart": {
          "chartOptions": {
            "mode": "COLOR"
          },
          "dataSets": [
            {
              "plotType": "LINE",
              "targetAxis": "Y1",
              "timeSeriesQuery": {
                "prometheusQuery": "max by (\"path\")(rate({\"__name__\"=\"rekor_api_latency_summary_sum\"}[${__interval}]))/ 1000000\n",
                "unitOverride": "ms"
              }
            }
          ],
          "timeshiftDuration": "0s",
          "yAxis": {
            "label": "y1Axis",
            "scale": "LINEAR"
          }
        }
      },
      {
        "title": "prometheus/rekor_latency_by_api/histogram (filtered) [SUM]",
        "xyChart": {
          "chartOptions": {
            "mode": "COLOR"
          },
          "dataSets": [
            {
              "minAlignmentPeriod": "60s",
              "plotType": "HEATMAP",
              "targetAxis": "Y1",
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "aggregation": {
                    "alignmentPeriod": "60s",
                    "crossSeriesReducer": "REDUCE_SUM",
                    "perSeriesAligner": "ALIGN_DELTA"
                  },
                  "filter": "metric.type=\"prometheus.googleapis.com/rekor_latency_by_api/histogram\" resource.type=\"prometheus_target\" metric.label.\"path\"=\"/api/v1/log/entries/{entryUUID}\""
                }
              }
            }
          ],
          "yAxis": {
            "scale": "LINEAR"
          }
        }
      },
      {
        "title": "Requests per second by method and path",
        "xyChart": {
          "chartOptions": {
            "mode": "COLOR"
          },
          "dataSets": [
            {
              "minAlignmentPeriod": "60s",
              "plotType": "LINE",
              "targetAxis": "Y1",
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "aggregation": {
                    "alignmentPeriod": "60s",
                    "crossSeriesReducer": "REDUCE_SUM",
                    "groupByFields": [
                      "metric.label.\"method\"",
                      "metric.label.\"path\""
                    ],
                    "perSeriesAligner": "ALIGN_RATE"
                  },
                  "filter": "metric.type=\"prometheus.googleapis.com/rekor_qps_by_api/counter\" resource.type=\"prometheus_target\""
                }
              }
            }
          ],
          "yAxis": {
            "scale": "LINEAR"
          }
        }
      }
    ]
  }
}
